{
  "dataset_reader": {
    "type": "csv_classification_reader",
    "delimiter": ",",
    "pos_input": 1,
    "pos_gold_label": 2,
    "tokenizer": {
      "word_splitter": {
        "language": "es"
      }
    },
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "experiments/tweet-classification-spanish/data/coset-train.csv",
  "validation_data_path": "experiments/tweet-classification-spanish/data/coset-dev.csv",
  "model": {
    "type": "sequence_classifier",
    "text_field_embedder": {
            "tokens": {
              "type": "embedding",
              "pretrained_file": "data/large/fasttext-es.txt.gz",
              "embedding_dim": 300,
              "trainable": false
          }
    },
    "encoder": {
            "type": "lstm",
            "hidden_size": 100,
            "input_size": 300,
            "dropout": 0.7,
            "num_layers": 2,
            "bidirectional": true
    }
  },
  "iterator": {"type": "bucket", "batch_size": 16},
  "trainer": {
    "optimizer": {
      "type": "adam"
    },
    "num_epochs": 10,
    "patience": 10,
    "cuda_device": -1
  }
}
